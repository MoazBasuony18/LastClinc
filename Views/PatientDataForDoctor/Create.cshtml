@model LastClinc.ViewModels.PatientDataDoctorViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>اضافة</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine" class="control-label"></label>
                <input asp-for="Medicine" class="form-control" />
                <span asp-validation-for="Medicine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment" class="control-label"></label>
                <input asp-for="Treatment" class="form-control" />
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complain" class="control-label"></label>
                <input asp-for="Complain" class="form-control" />
                <span asp-validation-for="Complain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PastHistory" class="control-label"></label>
                <input asp-for="PastHistory" class="form-control" />
                <span asp-validation-for="PastHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exmination" class="control-label"></label>
                <input asp-for="Exmination" class="form-control" />
                <span asp-validation-for="Exmination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Investigations" class="control-label"></label>
                <input asp-for="Investigations" class="form-control" />
                <span asp-validation-for="Investigations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items="@(new SelectList(Model.PatientDatas,"Id","PatientName"))"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"class="btn btn-outline-info">العودة الي الصفحة السابقة</a>
</div>


